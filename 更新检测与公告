$b = Get-Content -Path "$env:USERPROFILE\Documents\3dmigoto yi jian zong he ban\版本号.ini" -TotalCount 1
$b = Get-Content -Path “$env：USERPROFILE\Documents\3dmigoto yi jian zong he ban\版本号.ini” -TotalCount 1
if ("$b" -ne "$最新版本号") {
